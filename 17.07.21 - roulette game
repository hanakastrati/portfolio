#imports
import random
import time

layer1 = ["red","black"]
layer2 = ["odd","even"]

output1 = random.choice(layer1)
output2 = random.choice(layer2)
output3 = random.randint(1,36)
money = 1000


def game():
    global money
    print("You have $" + str(money))
    bet = input("What do you want to bet? a. red or black, b. odd or even, or c. a specific number?")
    if bet == "a":
        layer1bet = input("Would you like to bet on red or black?")
        money1 = int(input("How much money would you like to bet?"))
        print("No more bets, ball is rolling")
        time.sleep(1)
        if layer1bet==output1:
            money = money + money1
            print("Congratulations, you were right. You win! " + str(money1))
            print("Now you have $ " + str(money))
        else:
            money = money - money1
            print("Sorry you were wrong. The correct color was " + output1)
            print("You lost $" + str(money1))
            print("Now you have $ " + str(money))

    if bet =="b":
        layer2bet = input("Would you like to bet on even or odd?")
        money2 = int(input("How much money would you like to bet?"))
        print("No more bets, ball is rolling")
        time.sleep(1)
        if layer2bet==output2:
            money = money + money2
            print("Congratulations, you were right. You win! " + str(money2))
            print("Now you have $ " + str(money))
        else:
            money = money - money2
            print("Sorry you were wrong. The correct answer was " + output2)
            print("You lost$" + str(money2))
            print("Now you have $ " + str(money))

    if bet == "c":
        layer3bet = input("What number do you want to bet on?")
        money3 = int(input("How much money would you like to bet?"))
        print("No more bets, ball is rolling")
        time.sleep(1)
        if layer3bet==output3:
            money = money + money3
            print("Congratulations, you were right. You win! " + str(money3))
            print("Now you have $ " + str(money))
        else:
            money = money - money3
            print("Sorry you were wrong. The correct number was " + str(output3))
            print("You lost$" + str(money3))
            print("Now you have $ " + str(money))

while money > 0:
    game()
